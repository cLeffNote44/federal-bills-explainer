# Federal Bills Explainer Ingestion Configuration

# Required: Congress.gov API Key
# Get your API key from: https://api.congress.gov/sign-up/
INGEST_CONGRESS_API_KEY=your_api_key_here

# Database connection
INGEST_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/postgres

# Model configuration
INGEST_INGEST_MODEL_NAME=google/flan-t5-base
INGEST_EMBED_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Optional: Date range for ingestion (ISO format: YYYY-MM-DD)
# INGEST_FROM_DATE=2024-01-01
# INGEST_TO_DATE=2024-12-31

# Optional: Processing limits
INGEST_MAX_RECORDS=20
INGEST_BATCH_SIZE=10

# Optional: Performance settings
INGEST_USE_GPU=false
INGEST_API_DELAY_SECONDS=0.5

# Optional: Logging
INGEST_LOG_LEVEL=INFO

# Optional: Dry run mode (true by default for safety)
INGEST_DRY_RUN=true
